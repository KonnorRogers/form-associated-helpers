{
  "include": [
    "exports/**/*.js",
    "examples/**/*.js",
    "types/**/*.d.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": true,
    "verbatimModuleSyntax": true
  },
  "references": {
    "tests": "./tests"
  }
}
